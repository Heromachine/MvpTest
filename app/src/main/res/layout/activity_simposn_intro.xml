<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity"
    android:background="#d7d5d5">

    <LinearLayout
        android:layout_width="162dp"
        android:layout_height="283dp"

        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="176dp">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="238dp"
            android:background="#FFF"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/xfinity"


            />

        <Button
            android:id="@+id/btn_retrofit"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:background="#ec1409"
            android:onClick="handleMethod"
            android:text="Retrofit"
            android:textColor="#fff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="160dp"
        android:layout_height="280dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="179dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="238dp"

            app:srcCompat="@drawable/the_simpsons" />

        <Button
            android:id="@+id/btn_json"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ecd909"
            android:onClick="handleMethod"
            android:text="JSON"
            tools:layout_editor_absoluteX="20dp"
            tools:layout_editor_absoluteY="327dp" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>